{
  "dependencies": {
    "ergogen": "^4.0.5",
    "dxf": "^5.1.0",
    "nodemon": "^3.0.1"
  },
  "scripts": {
    "build": "ergogen ./ergogen/ --output ./ergogen/output && ./script/convertdxf.sh",
    "debug": "ergogen ./ergogen/ --output ./ergogen/output --clear --debug && ./script/convertdxf.sh",
    "watch:build": "nodemon -e yaml -x \"npm run build\"",
    "watch:debug": "nodemon -e yaml -x \"npm run debug\""
    
  },
  "nodemonConfig": {
    "ignore": ["./ergogen/output"],
    "delay": 0,
    "events": {
      "start": "clear -x"
    }
  }
}
